<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.client.ControllerPlayerSelection">
   <children>
      <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #424657;">
               <children>
                  <Label text="Select your opponent" textFill="#cdd5fa">
                     <font>
                        <Font name="System Bold" size="36.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" VBox.vgrow="NEVER">
                     <children>
                        <Label text="You are:" textFill="#cdd5fa">
                           <font>
                              <Font size="16.0" />
                           </font></Label>
                        <Label fx:id="labelClientName" text="{clientName}" textFill="RED">
                           <padding>
                              <Insets left="5.0" />
                           </padding>
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <VBox alignment="CENTER" spacing="5.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Available players" textFill="#cdd5fa">
                           <font>
                              <Font name="System Italic" size="15.0" />
                           </font></Label>
                        <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                           <content>
                              <VBox fx:id="yPane" alignment="CENTER" style="-fx-background-color: #cdd5fa;" />
                           </content>
                           <VBox.margin>
                              <Insets left="30.0" right="30.0" />
                           </VBox.margin>
                        </ScrollPane>
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" VBox.vgrow="NEVER">
                     <children>
                        <Button fx:id="buttonExit" mnemonicParsing="false" onAction="#exit" style="-fx-background-color: #cdd5fa;" text="Exit">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font></Button>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <AnchorPane fx:id="challengeOverlay" style="-fx-background-color: rgba(96,100,117,0.98); -fx-background-radius: 24;" visible="false" StackPane.alignment="CENTER">
               <StackPane.margin>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </StackPane.margin>
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <Label text="You've been challenged by: " textFill="#cdd5fa">
                           <font>
                              <Font name="System Bold" size="23.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin></Label>
                        <Label fx:id="labelChallengerName" text="{playerName]" textFill="RED">
                           <font>
                              <Font name="System Bold Italic" size="30.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="buttonAcceptChallenge" mnemonicParsing="false" onAction="#acceptChallenge" style="-fx-background-color: #cdd5fa;" text="Accept">
                                 <HBox.margin>
                                    <Insets left="20.0" right="20.0" />
                                 </HBox.margin>
                                 <font>
                                    <Font size="16.0" />
                                 </font></Button>
                              <Button fx:id="buttonDeclineChallenge" mnemonicParsing="false" onAction="#declineChallenge" style="-fx-background-color: #cdd5fa;" text="Decline">
                                 <HBox.margin>
                                    <Insets left="20.0" right="20.0" />
                                 </HBox.margin>
                                 <font>
                                    <Font size="16.0" />
                                 </font></Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
         </children>
      </StackPane>
   </children>
</AnchorPane>
